<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                          
     
    
                 
                            
                                                                                             
           
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:tag="layout/item_actor_0"                          
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="3dp"
                                              
          xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:fresco="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/actor_pic"
        android:layout_width="130dp"
        android:layout_height="130dp"
        fresco:roundedCornerRadius="65dp"
        fresco:roundingBorderWidth="4dp"
        fresco:roundingBorderColor="@color/colorDark"
        android:tag="binding_1"                
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <engineertest.android.touche.com.paytouch.ui.views.TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="binding_2"              
                                                      
        android:textStyle="bold"
        android:textSize="@dimen/font_size_lg"/>

    <engineertest.android.touche.com.paytouch.ui.views.TextView
        android:id="@+id/last_name"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="binding_3"             
                                                      
        android:textSize="@dimen/font_size_lg"/>
    </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:tag="binding_4"        
                    />

                <engineertest.android.touche.com.paytouch.ui.views.TextView
                    android:id="@+id/location"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_5"             
                    android:textStyle="italic"
                    android:layout_gravity="center"
                                                                  
                    android:textSize="@dimen/font_size_s"/>

            </LinearLayout>

</LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <engineertest.android.touche.com.paytouch.ui.views.TextView
                android:id="@+id/description"
                android:maxLines="5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:tag="binding_6"                
                                                              
                android:textSize="@dimen/font_size_s"/>

            <FrameLayout
                android:tag="binding_7"                               
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp">
                <engineertest.android.touche.com.paytouch.ui.views.TextView
                    android:id="@+id/popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_8"               
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/font_size_lg"/>
            </FrameLayout>

            </LinearLayout>


  </LinearLayout>



    </android.support.v7.widget.CardView>
             